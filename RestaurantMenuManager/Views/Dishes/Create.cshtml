@model RestaurantMenuManager.ViewModels.DishesCreateViewModel

@{
    Layout = null;
}

<html>
<body>
    <form method="post" action="/Dishes/Create">
        <input type="number" name="Dish.Id" value="@Model.Dish.Id" placeholder="Id" />
        <span asp-validation-for="Dish.Id" class="text-danger"></span>
        <br />
        <input type="text" name="Dish.Name" placeholder="Name" />
        <span asp-validation-for="Dish.Name" class="text-danger"></span>
        <br />
        <input type="number" step="0.01" name="Dish.Price" placeholder="Price" />
        <span asp-validation-for="Dish.Price" class="text-danger"></span>
        <br />
        <select name="Dish.Type">
            @foreach (var dt in Model.DishTypesList)
            {
                <option value="@dt.Id">@dt.Type</option>
            }
        </select>
        <button type="submit">Create</button>
    </form>
</body>
</html>